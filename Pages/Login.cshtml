@page
@model NoodlesSimulator.Pages.LoginModel
@{
    ViewData["Title"] = "התחברות / הרשמה";
}
<head>
    <meta charset="utf-8" />
    <title>התחברות / הרשמה</title>
    <link rel="stylesheet" href="/css/site.css" />
    <link rel="icon" type="image/png" sizes="192x192" href="/logo/noodles-logo-transparent.png">
    <link rel="apple-touch-icon" sizes="192x192" href="/logo/noodles-logo-transparent.png">
    <link rel="manifest" href="/manifest.json">
</head>
<!-- background -->
<img src="/assets/background.gif" alt="רקע" class="background-gif" />
<!-- logo -->
<div class="logo-header">
    <img src="/logo/noodles-logo-transparent.png" alt="Noodles Simulator Logo" />
</div>
<!-- login button  -->
<div class="login-container" style="max-width: 400px; margin: 0 auto; padding: 40px 30px; background-color: rgba(0, 0, 0, 0.5); border-radius: 20px; box-shadow: 0 0 20px rgba(0,0,0,0.4); margin-top: 60px; text-align: center;">
    <h2 style="color: white; margin-bottom: 25px;">! ברוכים הבאים</h2>
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <p class="error-message" style="color: @(Model.ErrorMessage.Contains("נחסם") ? "#ff0000" : "#ff4c4c"); margin-bottom: 20px;">
            @Model.ErrorMessage
        </p>
    }
    <form method="post">
        @Html.AntiForgeryToken()
        <div style="text-align: right;">
            <label for="username" style="color: white;">שם משתמש</label>
            <input type="text" name="Username" id="username" class="input-field"
                   value="@Model.Username"
                   style="width: 100%; margin-bottom: 20px;" required />
            <label for="password" style="color: white;">סיסמה</label>
            <input type="password" name="Password" id="password" class="input-field"
                   style="width: 100%; margin-bottom: 25px; direction: rtl;" required />
        </div>
        <div style="display: flex; justify-content: space-between; gap: 10px;">
            <button type="submit" name="action" value="login" class="main-btn" style="flex: 1;">התחברות</button>
            <button type="submit" name="action" value="register" class="secondary-btn" style="flex: 1;">הרשמה</button>
        </div>
    </form>
</div>
