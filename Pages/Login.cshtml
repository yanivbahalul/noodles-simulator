@page
@model NoodlesSimulator.Pages.LoginModel
@{
    ViewData["Title"] = "转专转 / 专砖";
}
<link rel="stylesheet" href="/css/site.css" />
<!-- background -->
<img src="/assets/background.gif" alt="专拽注" class="background-gif" />
<!-- logo -->
<div class="logo-header">
    <img src="/logo/noodles-logo-transparent.png" alt="Noodles Simulator Logo" />
</div>
<!-- login button  -->
<div class="login-container" style="max-width: 400px; margin: 0 auto; padding: 40px 30px; background-color: rgba(0, 0, 0, 0.5); border-radius: 20px; box-shadow: 0 0 20px rgba(0,0,0,0.4); margin-top: 150px; text-align: center;">
    <h2 style="color: white; margin-bottom: 25px;">! 专 </h2>
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <p class="error-message" style="color: @(Model.ErrorMessage.Contains("住") ? "#ff0000" : "#ff4c4c"); margin-bottom: 20px;">
            @Model.ErrorMessage
        </p>
    }
    <form method="post">
        @Html.AntiForgeryToken()
        <div style="text-align: right;">
            <label for="username" style="color: white;">砖 砖转砖</label>
            <input type="text" name="Username" id="username" class="input-field"
                   value="@Model.Username"
                   style="width: 100%; margin-bottom: 20px;" required />
            <label for="password" style="color: white;">住住</label>
            <input type="password" name="Password" id="password" class="input-field"
                   style="width: 100%; margin-bottom: 25px; direction: rtl;" required />
        </div>
        <div style="display: flex; justify-content: space-between; gap: 10px;">
            <button type="submit" name="action" value="login" class="main-btn" style="flex: 1;"> 转专转</button>
            <button type="submit" name="action" value="register" class="secondary-btn" style="flex: 1;"> 专砖</button>
        </div>
    </form>
</div>
