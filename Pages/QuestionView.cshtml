@page
@model NoodlesSimulator.Pages.QuestionViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="he" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>Noodles Simulator — צפייה בשאלה</title>
    <link rel="stylesheet" href="/css/site.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <a href="/Dashboard" class="back-to-quiz">⬅ חזרה לניהול</a>
    <img src="/assets/background.gif" class="background-gif" alt="רקע" />

    <div class="logo-header">
        <a href="/Index" style="display:inline-block;">
            <img src="/logo/noodles-logo-transparent.png" alt="Noodles Simulator Logo" />
        </a>
    </div>

    <div class="quiz-container">
        @if (!string.IsNullOrWhiteSpace(Model.QuestionImageUrl))
        {
            <img src="@Model.QuestionImageUrl" alt="שאלה" loading="lazy" id="main-question-image" style="cursor: pointer;" onclick="openImageModal()" />
        }

        <div class="answers">
            @foreach (var kv in Model.AnswerImageUrls)
            {
                var answerClass = "";
                if (Model.ShowAnswerResults)
                {
                    // Mark correct answer in green
                    if (kv.Key == Model.CorrectAnswerKey)
                    {
                        answerClass = "correct";
                    }
                    // Mark selected (wrong) answer in red
                    else if (kv.Key == Model.SelectedAnswerKey)
                    {
                        answerClass = "incorrect";
                    }
                }

                <button class="answer-btn @answerClass" disabled style="display: flex; justify-content: center; align-items: center;">
                    <img src="@kv.Value" alt="תשובה" loading="lazy" style="margin: 0 auto;" />
                </button>
            }
        </div>
        
        @if (Model.ShowAnswerResults)
        {
            var isCorrect = Model.SelectedAnswerKey == Model.CorrectAnswerKey;
            <p style="margin-top:15px; font-size:18px; color:@(isCorrect ? "#32cd32" : "#ff4c4c"); font-weight: bold; text-align: center;">
                @(isCorrect ? "✓ תשובה נכונה!" : "✗ תשובה שגויה")
            </p>
        }
    </div>

    <!-- Image Modal -->
    <div id="image-modal" class="image-modal" style="display:none;">
        <span class="close-modal" onclick="closeImageModal()">&times;</span>
        <img class="modal-content" id="modal-img" src="@Model.QuestionImageUrl" alt="שאלה מוגדלת" />
    </div>

    <script>
    function openImageModal() {
        var modal = document.getElementById('image-modal');
        var modalImg = document.getElementById('modal-img');
        modalImg.src = '@Model.QuestionImageUrl';
        modal.style.display = 'flex';
    }
    function closeImageModal() {
        var modal = document.getElementById('image-modal');
        modal.style.display = 'none';
    }
    document.addEventListener('DOMContentLoaded', function () {
        var modal = document.getElementById('image-modal');
        if (!modal) return;
        modal.addEventListener('click', function (e) {
            if (e.target === modal) closeImageModal();
        });
    });
    </script>

    <footer class="site-footer">
        <p class="text-sm text-muted-foreground">
            פותח ע״י <a href="https://www.linkedin.com/in/yaniv-bahalul/" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-1 hover:text-primary transition-colors">
                יניב בהלול
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-linkedin h-4 w-4">
                    <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
                    <rect width="4" height="12" x="2" y="9"></rect>
                    <circle cx="4" cy="4" r="2"></circle>
                </svg>
            </a> • כל הזכויות שמורות ©
        </p>
    </footer>
</body>
</html>


